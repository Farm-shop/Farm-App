<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic"

    tools:context=".LogIn"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewsignUp"
        android:layout_width="300dp"
        android:layout_height="550dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/blackOpacity"

        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.29000002">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="550dp">

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/roundtext"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/nameSignUp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <Button
                    android:id="@+id/signInonTransitionUp"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/signininsidelogup"
                    android:text="Sign In"
                    android:textColor="@color/light_green"/>

                <Button
                    android:id="@+id/signUponTransitionUp"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/roundbuttom"
                    android:cursorVisible="false"
                    android:text="Sign Up"
                     />
            </LinearLayout>


            <EditText
                android:id="@+id/nameSignUp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:background="@drawable/roundtext"
                android:drawablePadding="5dp"
                android:ems="10"
                android:hint="User Name"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:paddingStart="60dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/light_green"
                android:textColorHint="@color/light_green"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.25" />

            <EditText
                android:id="@+id/passwordSignup"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/roundtext"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:paddingStart="60dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/light_green"
                android:textColorHint="@color/light_green"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/nameSignUp"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="@+id/nameSignUp"
                app:layout_constraintTop_toBottomOf="@+id/nameSignUp"
                app:layout_constraintVertical_bias="0.0" />

            <EditText
                android:id="@+id/emailInSignUpPage"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/roundtext"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:paddingStart="60dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/light_green"
                android:textColorHint="@color/light_green"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/passwordSignup"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="@+id/passwordSignup"
                app:layout_constraintTop_toBottomOf="@+id/passwordSignup"
                app:layout_constraintVertical_bias="0.0" />

            <EditText
                android:id="@+id/editPhonNumber"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/roundtext"
                android:ems="10"
                android:hint="Phone"
                android:inputType="phone"
                android:minHeight="48dp"
                android:paddingStart="60dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/light_green"
                android:textColorHint="@color/light_green"
                app:layout_constraintEnd_toEndOf="@+id/emailInSignUpPage"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="@+id/emailInSignUpPage"
                app:layout_constraintTop_toBottomOf="@+id/emailInSignUpPage" />

            <Button
                android:id="@+id/signUpButton"
                android:layout_width="202dp"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/roundbuttom"
                android:text="Sign Up"
                android:textColorHint="@color/light_green"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/editPhonNumber"
                app:layout_constraintStart_toStartOf="@+id/editPhonNumber"
                app:layout_constraintTop_toBottomOf="@+id/editPhonNumber"
                app:layout_constraintVertical_bias="0.0" />

            <LinearLayout
                android:layout_width="49dp"
                android:layout_height="56dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/courner"

                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@+id/nameSignUp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/nameSignUp">

                <EditText
                    android:id="@+id/editTextTextPersonNameUp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/raundtextfor"
                    android:drawableStart="@drawable/ic_baseli"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingStart="15dp"
                    android:textColor="@color/light_green"
                    android:textColorHint="@color/light_green" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="49dp"
                android:layout_height="56dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/courner"

                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@+id/passwordSignup"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/passwordSignup">

                <EditText
                    android:id="@+id/editTextTextpasssUp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/raundtextfor"
                    android:drawableStart="@drawable/ic_baseline_lock_24"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingStart="15dp"
                    android:textColor="@color/light_green"
                    android:textColorHint="@color/light_green" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="49dp"
                android:layout_height="56dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/courner"

                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@+id/emailInSignUpPage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/emailInSignUpPage">

                <EditText
                    android:id="@+id/editTextTextEmailUp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/raundtextfor"
                    android:drawableStart="@drawable/ic_baseline_alternate_email_24"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingStart="15dp"
                    android:textColor="@color/light_green"
                    android:textColorHint="@color/light_green" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="49dp"
                android:layout_height="56dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/courner"

                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@+id/editPhonNumber"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/editPhonNumber">

                <EditText
                    android:id="@+id/editTextTextPhoneUp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/ic_baseline_phone_15"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingStart="15dp"
                    android:textColor="@color/light_green"
                    android:textColorHint="@color/light_green" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <ImageButton
        android:id="@+id/imagebackLogUp"
        android:layout_width="60dp"
        android:layout_height="55dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/backbutton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24" />


</androidx.constraintlayout.widget.ConstraintLayout>
